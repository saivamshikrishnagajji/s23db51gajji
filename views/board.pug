extends layout
 
block content
  h1= title
  p Query is : #{query.rows}, #{query.cols}
 
  - var rows = Number(query.rows)
  - var cols = Number(query.cols)
 
  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p This is not an integer value.
 
  - else if (rows < 1 || rows > 10)
    p The number of rows should fall  1 to 10
 
  - else if (cols < 1 || cols > 10)
    p The column values should be 1 to 10
 
  - else
    table#outer
      - for (let i = 0; i < rows; i++)
        tr#middle
          - for (let j = 0; j < cols; j++)
            - if (i === j)
              td= 1
            - else if (i === j + 1)
              td= 2
            - else if (i === j - 1)
              td= i
            - else
              td= 0